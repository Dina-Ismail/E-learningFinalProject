@model List<UserRoleViewModel>

@{ 
    var roleId = ViewBag.roleId;
}
<form method="post">
    <div class="card mb-3">
        <div class="card-header">
        <h2> You are about to add/ remove a user!</h2>        
        </div>
        <div class="card-body">
            @for(int i=0;i<Model.Count; i++)
            {
            <div class="form-check m-1">
                <input type="hidden" asp-for="@Model[i].UserId" class="form-check-input" />
                <input type="hidden" asp-for="@Model[i].UserName" class="form-check-input" />

                <input asp-for="@Model[i].isSelected" class="form-check-input" />
                <label asp-for="@Model[i].isSelected" class="form-check-label">@Model[i].UserName</label>
            </div>
            }
        </div>
        <div class="card-footer">
            <input type ="submit" value="Update" class="btn btn-primary" style="width:auto" />
            <a asp-action="EditRole" asp-route-id="@roleId" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>


</form>